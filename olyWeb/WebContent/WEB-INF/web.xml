<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>oly2</display-name>
  <servlet>
    <display-name>AsyncHandlerServlet</display-name>
    <servlet-name>AsyncHandlerServlet</servlet-name>
    <servlet-class>com.wsp.olympics.servlet.AsyncHandlerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AsyncHandlerServlet</servlet-name>
    <url-pattern>/async/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <display-name>OlympicsController</display-name>
    <servlet-name>OlympicsController</servlet-name>
    <servlet-class>com.wsp.olympics.servlet.OlympicsController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OlympicsController</servlet-name>
    <url-pattern>/oly</url-pattern>
    <url-pattern>/oly/admin/*</url-pattern>
  </servlet-mapping>
  <security-role>
    <description>The olympics shop administrator</description>
    <role-name>olympicsadm</role-name>
  </security-role>
  <security-constraint>
    <display-name>Security constraint for the admin page</display-name>
    <web-resource-collection>
      <web-resource-name>Admin page</web-resource-name>
      <url-pattern>/oly/admin/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <description>Only the Olympics administrator is allowed in</description>
      <role-name>olympicsadm</role-name>
    </auth-constraint>
  </security-constraint>
  <login-config>
    <auth-method>FORM</auth-method>
    <form-login-config>
      <form-login-page>/login.jsp</form-login-page>
      <form-error-page>/WEB-INF/jsp/error/loginError.jsp</form-error-page>
    </form-login-config>
  </login-config>
  <resource-ref>
    <res-ref-name>jdbc/olympicsShopDataSource</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <error-page>
    <error-code>404</error-code>
    <location>/WEB-INF/jsp/error/404.jsp</location>
  </error-page>
  <error-page>
    <error-code>500</error-code>
    <location>/WEB-INF/jsp/error/500.jsp</location>
  </error-page>
</web-app>