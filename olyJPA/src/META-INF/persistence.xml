<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="olyJPA" transaction-type="JTA">
		<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
		<jta-data-source>jdbc/olympicsShopDataSource</jta-data-source>
		<class>com.wsp.olympics.model.Category</class>
		<class>com.wsp.olympics.model.Customer</class>
		<class>com.wsp.olympics.model.Order</class>
		<class>com.wsp.olympics.model.OrderProduct</class>
		<class>com.wsp.olympics.model.Product</class>
	</persistence-unit>
</persistence>
